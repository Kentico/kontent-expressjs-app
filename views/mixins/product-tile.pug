mixin product-tile(product)
    .col-md-6.col-lg-4
        article.product-tile
            a(href=`/${currentCulture}/${product.system.type}/${product.system.codename}`)
                h1.product-heading #{product.elements.productName.value}
                -let productStatuses = undefined;
                -if(product.elements.productStatus.value.length > 0)
                    -productStatuses = product.elements.productStatus.value.map((x) => x.name).join(", ");
                -if(productStatuses)
                    span.product-tile-status #{productStatuses}
                figure.product-tile-image
                    img(src=product.elements.image.value[0].url, title='')
                .product-tile-info
                    span.product-tile-price 
                        =formatPrice(product.elements.price.value, 'en-US')